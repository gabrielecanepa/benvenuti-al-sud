<%= render "devise/shared/section" do %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email, required: true, input_html: { autocomplete: "email" } %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>
    </div>
    <div class="form-actions">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Log in", class: "btn btn-success text-white" %>
      <hr>
      <p>Don't have an account yet? <%= link_to "Sign up now", new_registration_path(resource_name) %></p>
    </div>
  <% end %>
<% end %>