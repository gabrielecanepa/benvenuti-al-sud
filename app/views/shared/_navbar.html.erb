<div class="navbar navbar-expand-sm navbar-light">
  <%= link_to root_path, class: "navbar-brand text-danger" do %>
    <%= image_tag "logo.svg", id: "navbar-logo" %>
    Benvenuti Al Sud
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link #{current_page?(root_path) ? 'disabled' : ''}" %>
      </li>
      <li class="nav-item">
        <%= link_to "Menu", products_path, class: "nav-link #{current_page?(products_path) ? 'disabled' : ''}" %>
      </li>
      <li class="nav-item" style="padding-right: 10px">
        <%= link_to "Cart", root_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "user-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to current_user.email, "#", class: "dropdown-item disabled mt-2" %>
            <hr>
            <%= link_to "Past orders", "#", class: "dropdown-item text-grey" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item text-danger mb-2" %>
          </div>
        </li>
      <% else %>  
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link text-success" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>